<%- for post in @posts -%>
  <li class="row panel column small-10">
    <div class="post-title column small-3">
      <h5><%= post.title %></h5>
      <h6><%= post.id %></h6>
      <ul class="button-group round">
        <li><%= link_to 'Edit', edit_post_path(post), class: 'button success' %></li>
        <li><%= link_to 'View', post, class: 'button' %></li>
      </ul>
    </div>
    <div class="post-created-date column small-2">
      <%= post.created_at.to_formatted_s(:long) %>
    </div>
    <ul class="button-group round right post-tools">
      <li class="post-publish">
        <%- if post.published? -%>
          <%= link_to 'Unpublish', post_unpublish_path(post), method: :post, class: 'button' %>
        <%- else -%>
          <%= link_to 'Publish', post_publish_path(post), method: :post, class: 'button'%>
        <%- end -%>
      </li>
      <li class="post-delete">
        <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button alert' %>
      </li>
    </ul>
  </li>
<%- end -%>