<%- for post in @posts -%>
  <li>
    <div class="post-title">
      <%= link_to post.title, edit_post_path(post) %>
    </div>
    <div class="post-publish">
      <%- if post.published? -%>
        <%= link_to 'Unpublish', post_unpublish_path(post), method: :post %>
      <%- else -%>
        <%= link_to 'Publish', post_publish_path(post), method: :post%>
      <%- end -%>
    </div>
    <div class="post-delete">
      <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </li>
<%- end -%>