<%= content_for :pre_container do %>
  <section id="homeHeader row">
    <div class="row title-area" data-equalizer>
      <div class="logo small-2 columns" data-equalizer-watch>
        <%= image_tag 'logo.png', {alt: 'logo goes here'} %>
      </div>
      <div class="title small-8 columns" data-equalizer-watch>
        <h1>The Sais Journal of Global Affairs</h1>
      </div>
      <div class="right small-2 columns" data-equalizer-watch>
        <div class="fb-like" data-href="https://www.facebook.com/bcjournal" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
        <a class="twitter-follow-button"
          href="https://twitter.com/SAIS_BCJournal"
          data-show-count="false"
          data-size="large"
          data-lang="en">
        Follow @twitterdev
        </a>
      </div>
    </div>
    <hr>
    <div class="slideshow" data-equalizer>
      <% for post in @slides do %>
        <div data-equalizer-watch>
          <%= link_to(post)  do%>
          <span class="overlay"></span>
          <span class="slide-image" style='background-image:url(<%= post.cover_image.cover %>)'></span>
          <div class="caption">
            <h1><%= post.title %></h1>
            <p><%= post.blurb %></p>
          </div>
          <%- end -%>
        </div>
      <%- end -%>
      <span id="prevArrow" class="icon-angle-left" data-equalizer-watch></span>
      <span id="nextArrow" class='icon-angle-right' data-equalizer-watch></span>
    </div>
  </section>
<%- end -%>