<%= content_for :pre_container do %>
  <div id="homeHeader">
    <div class="logo">
      <%= image_tag 'sais_thumb.jpg', {alt: 'logo goes here'} %>
    </div>
    <div class="title">
      <h1 class="inline">SAIS</h1>
    </div>
    <div class="right">
      <div class="fb-like" data-href="https://www.facebook.com/bcjournal" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false"></div>
    </div>
    <hr>
    <div class="slideshow">
      <% for post in @posts do %>
        <div>
          <%= link_to(post)  do%>
          <span class="overlay"></span>
          <span class="slide-image" style='background-image:url(<%= post.cover_image.cover %>)'></span>
          <div class="caption">
            <h1><%= post.title %></h1>
            <p>THIS IS A BLURB BLURBY BLURBY BLURB.SEE HOW BLURBY I AM.SO MUCH BLURB.</p>
          </div>
          <%- end -%>
        </div>
      <%- end -%>
      <span id="prevArrow" class="icon-angle-left"></span>
      <span id="nextArrow" class='icon-angle-right'></span>
    </div>
  </div>
<%- end -%>